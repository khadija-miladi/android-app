<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backg"
    tools:context=".forgetpassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30sp"
                android:text="Welcome \nPlease change your \npassword here!"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold"
                android:padding="10dp"/>
            "


            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="30sp"
                android:layout_marginRight="35dp"
                android:src="@drawable/forgetpassword" />
        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="20sp"
            android:layout_marginRight="10sp"
            android:background="@drawable/shape"
            android:padding="16dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15sp"
                android:text="Enter your email adress"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/emailForgetPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="15dp"
                android:drawableRight="@drawable/ic_email"
                android:hint="exemple@gmail.com"
                android:inputType="textEmailAddress"
                android:padding="16sp"
                android:textSize="13dp"
                android:textStyle="bold"
                android:layout_margin="20dp"
                />



            <Button
                android:id="@+id/btnResetPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/black"
                android:text="Reset password"
                app:cornerRadius="20dp"
                 />

            <Button
                android:id="@+id/backsignin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/white"
                android:text="Back"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/ic_back"
                android:drawableTint="@color/black"
                app:cornerRadius="20dp"

                />




        </LinearLayout>

    </LinearLayout>
</ScrollView>