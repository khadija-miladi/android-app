<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backg"
    tools:context=".register">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30sp"
                android:text="Welcome \nPlease register here!"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="10dp"/>
            "


            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="30sp"
                android:layout_marginRight="35dp"
                android:src="@drawable/logo" />
        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="20sp"
            android:layout_marginRight="10sp"
            android:background="@drawable/shape"
            android:padding="16dp">




            <EditText
                android:id="@+id/nameUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Full name"
                android:layout_margin="10sp"
                android:drawableRight="@drawable/ic_fullname"
                android:drawableTint="@color/black"
                android:inputType="text"
                android:padding="16sp"
                android:textSize="15dp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/emailUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:layout_margin="10sp"
                android:drawableRight="@drawable/ic_email"
                android:drawableTint="@color/black"
                android:inputType="text"
                android:padding="16sp"
                android:textSize="15dp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/phoneUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone"
                android:layout_margin="10sp"
                android:drawableRight="@drawable/ic_phone"
                android:drawableTint="@color/black"
                android:inputType="text"
                android:padding="16sp"
                android:textSize="15dp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/cinUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Num CIN"
                android:layout_margin="10sp"
                android:drawableRight="@drawable/ic_cin"
                android:drawableTint="@color/black"
                android:inputType="text"
                android:padding="16sp"
                android:textSize="15dp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/passwordUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:layout_margin="10sp"
                android:drawableRight="@drawable/ic_key"
                android:drawableTint="@color/black"
                android:inputType="text"
                android:padding="16sp"
                android:textSize="15dp"
                android:textStyle="bold" />



            <Button
                android:id="@+id/register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:padding="16sp"
                android:backgroundTint="@color/black"
                android:text="Register"
                app:cornerRadius="20dp"
                />

            <TextView
                android:id="@+id/haveaccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:padding="12sp"
                android:text="You have an account !"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>

</ScrollView>